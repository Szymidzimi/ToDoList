@model IEnumerable<ToDoManager.Models.TaskModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista Twoich zadań</h1>

<p class="moja">
    <a asp-action="Create">Dodaj kolejne zadanie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataOfStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataOfEvent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdTask)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataOfStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataOfEvent)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.IdTask }) |
                @Html.ActionLink("Opis zadania", "Details", new { id = item.IdTask }) |
                @Html.ActionLink("Usuń", "Delete", new { id=item.IdTask })
            </td>
        </tr>
}
    </tbody>
</table>
